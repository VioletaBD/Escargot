{% extends 'base.html.twig' %}

{% block title %}Register
{% endblock %}

{% block body %}
	<div class="registrationForm mt-5 pt-4 rounded-5 border border-secondary mx-4  mx-lg-auto col-lg-4">
		{% for flash_error in app.flashes('verify_email_error') %}
			<div class="alert alert-danger" role="alert">{{ flash_error }}</div>
		{% endfor %}
		<div class="container-fluid">
			<div class="registrationForm">
				<p class="registration-title text-center fs-1 text-primary mb-4 fw-bold">Cr√©ez votre compte !</p>
				{{ form_start(registrationForm) }}
				<div class="col">
					<div class="registration-form mx-auto pt-3 mx-lg-auto mb-3 col-lg-8">
						<div class="my-3 col-10 m-auto fs-5">
							{{ form_row(registrationForm.lastName, { 'attr': {'class': 'registration-input'} }) }}
						</div>
						<div class="my-3 col-10 m-auto fs-5">
							{{ form_row(registrationForm.name, { 'attr': {'class': 'registration-input'} }) }}
						</div>
						<div class="my-3 col-10 m-auto fs-5">
							{{ form_row(registrationForm.email, { 'attr': {'class': 'registration-input'} }) }}
						</div>
						<div class="my-3 col-10 m-auto fs-5">
							{{ form_row(registrationForm.plainPassword, { 'attr': {'class': 'registration-input'} }) }}
						</div>
						<div class="my-3 col-10 m-auto d-flex justify-content-center">
							<button type="submit" class="btn btn-primary col-10 my-3 fs-5 p-1">Valider</button>
						</div>
					</div>
				</div>
				{{ form_end(registrationForm) }}
			</div>
		</div>
	{% endblock %}
