{% extends 'base.html.twig' %}

{% block title %}Escargot!
{% endblock %}

{% block body %}
	<div class="login mt-5">
		<div class="loginbody container-fluid">
			<form action="{{ path('app_login') }}" method="post">
				<div class="login pt-4 rounded-5 border border-secondary mx-4  mx-lg-auto col-lg-4">
					<p class="titleLogin text-center text-primary pb-3 fs-1 fw-bold">Connectez-vous !</p>
					{% if error %}
						<div>{{ error.messageKey|trans(error.messageData, 'security') }}</div>
					{% endif %}

					<form class="d-flex flex-column" action="{{ path('app_login') }}" method="post">
						
						<div class="my-3 col-10 m-auto">
							<label for="username" class="form-label fw-bold ms-1">Adresse e-mail</label>
							<input type="text" id="username" class="form-control" name="_username" value="{{ last_username }}">
						</div>
						<div class="my-3 col-10 m-auto">
							<label for="password" class="form-label fw-bold ms-1">Sasie le mot de passe pour confirmez</label>
							<input type="password" class="form-control" id="password" name="_password">
						</div>
						<div class="my-3 col-10 m-auto">
							<button type="submit" class="btn btn-outline-primary w- m-auto mb-5 mt-4 fw-bold fs-5">Valider</button>
						</div>
					</form>
					<div class="text-center mb-1">
						<div class="my-2 fw-normal fs-5">Vous n'avez pas de compte ?</div>
						<a class="btn btn-outline-primary mt-2 mb-5 w-75 fw-bold fs-5" href="{{ path('app_register')}}">S'inscrire</a>
					</div>
				</div>
			</div>
		{% endblock %}
